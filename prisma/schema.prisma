// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model usuario {
  id    Int     @id @default(autoincrement())
  nombre  String?
  registro todo[]
}

model todo {
  id        Int     @id @default(autoincrement())
  usuario    usuario    @relation(fields: [usuarioID], references: [id])
  usuarioID  Int
  fecha   String?
  comentario    String
  estado  Int
  
}
